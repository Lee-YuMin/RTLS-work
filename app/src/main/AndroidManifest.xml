<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hatio.insidepositioning">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CameraView">
            <action android:name="android.intent.action.CameraView" />
        </activity>
        <activity android:name=".Login">
            <action android:name="android.intent.action.Login" />
        </activity>
        <activity android:name=".OdometerCamera">
            <action android:name="android.intent.action.Odometer" />
        </activity>
        <activity android:name=".Setting">
            <action android:name="android.intent.action.Setting" />
        </activity>
        <activity android:name=".MonoVo">
            <action android:name="android.intent.action.MonoVo" />
        </activity>


        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>